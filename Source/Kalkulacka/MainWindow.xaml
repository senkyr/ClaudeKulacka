<Window x:Class="SimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jednoduchá kalkulačka" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Displej kalkulačky -->
        <TextBlock x:Name="Display" Grid.Row="0" Text="0" FontSize="36" 
                   TextAlignment="Right" Padding="10" Background="LightGray"/>

        <!-- Tlačítka kalkulačky -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- První řádek -->
            <Button x:Name="PercentButton" Grid.Row="0" Grid.Column="0" Content="%" FontSize="20" Click="OperationButton_Click"/>
            <Button x:Name="CeButton" Grid.Row="0" Grid.Column="1" Content="CE" FontSize="20" Click="CeButton_Click"/>
            <Button x:Name="CButton" Grid.Row="0" Grid.Column="2" Content="C" FontSize="20" Click="CButton_Click"/>
            <Button x:Name="BackspaceButton" Grid.Row="0" Grid.Column="3" Content="⌫" FontSize="20" Click="BackspaceButton_Click"/>

            <!-- Druhý řádek -->
            <Button x:Name="FractionButton" Grid.Row="1" Grid.Column="0" Content="¹/ₓ" FontSize="20" Click="OperationButton_Click"/>
            <Button x:Name="SquareButton" Grid.Row="1" Grid.Column="1" Content="x²" FontSize="20" Click="OperationButton_Click"/>
            <Button x:Name="SquareRootButton" Grid.Row="1" Grid.Column="2" Content="²√x" FontSize="20" Click="OperationButton_Click"/>
            <Button x:Name="DivideButton" Grid.Row="1" Grid.Column="3" Content="÷" FontSize="20" Click="OperationButton_Click"/>

            <!-- Třetí řádek -->
            <Button x:Name="SevenButton" Grid.Row="2" Grid.Column="0" Content="7" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="EightButton" Grid.Row="2" Grid.Column="1" Content="8" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="NineButton" Grid.Row="2" Grid.Column="2" Content="9" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="MultiplyButton" Grid.Row="2" Grid.Column="3" Content="×" FontSize="20" Click="OperationButton_Click"/>

            <!-- Čtvrtý řádek -->
            <Button x:Name="FourButton" Grid.Row="3" Grid.Column="0" Content="4" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="FiveButton" Grid.Row="3" Grid.Column="1" Content="5" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="SixButton" Grid.Row="3" Grid.Column="2" Content="6" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="MinusButton" Grid.Row="3" Grid.Column="3" Content="−" FontSize="20" Click="OperationButton_Click"/>

            <!-- Pátý řádek -->
            <Button x:Name="OneButton" Grid.Row="4" Grid.Column="0" Content="1" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="TwoButton" Grid.Row="4" Grid.Column="1" Content="2" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="ThreeButton" Grid.Row="4" Grid.Column="2" Content="3" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="PlusButton" Grid.Row="4" Grid.Column="3" Content="+" FontSize="20" Click="OperationButton_Click"/>

            <!-- Šestý řádek -->
            <Button x:Name="PlusMinusButton" Grid.Row="5" Grid.Column="0" Content="+/-" FontSize="20" Click="PlusMinusButton_Click"/>
            <Button x:Name="ZeroButton" Grid.Row="5" Grid.Column="1" Content="0" FontSize="20" Click="NumberButton_Click"/>
            <Button x:Name="DecimalButton" Grid.Row="5" Grid.Column="2" Content="," FontSize="20" Click="DecimalButton_Click"/>
            <Button x:Name="EqualsButton" Grid.Row="5" Grid.Column="3" Content="=" FontSize="20" Click="EqualsButton_Click" Background="LightBlue"/>
        </Grid>
    </Grid>
</Window>
    